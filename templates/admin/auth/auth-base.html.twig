{% extends "admin/base.html.twig" %}

{% block body %}



<div class="main d-flex justify-content-center w-100">
    <main class="content d-flex p-0">
        <div class="container d-flex flex-column">
            <div class="row h-100">
                <div class="col-sm-10 col-md-8 col-lg-6 col-xl-5 mx-auto d-table h-100">
                    <div class="d-table-cell align-middle">

                        <div class="text-center mt-4">
                            <h1 class="h2">{{"Administration"|trans}}</h1>
                            <p class="lead">
                                {% block contentDescription %}{% endblock %}
                            </p>
                        </div>
                        {% if flash.error is not empty %}
                        <div class="alert alert-danger p-3 mx-auto" role="alert">
                            {{flash.error}}
                        </div>
                        {% endif %}
                        {% if flash.success is not empty %}
                        <div class="alert alert-success p-3 mx-auto" role="alert">
                            {{flash.success}}
                        </div>

                        {% endif %}
                        {% block content %}{% endblock content %}
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

{% endblock body %}