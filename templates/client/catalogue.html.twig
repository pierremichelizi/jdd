{% extends 'client/base.html.twig' %}

{% block title %}AdmissionFacile | {{"Obtener votre admission sans perdre du temps"|trans}}{% endblock %}

{% block body %}
<!-- about page start here  -->
<div class="instructors-wrapper single-page-section-bottom-space">

    <!-- breadcrumb area start here  -->
    <div class="breadcrumb-wrap style-01">
        <div class="container custom-container-01">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb-content py-3">
                        <h3 class="title">{{t("Programmes & Formations")}}</h3>
                        <p class="details">{{t('Rechercher et trouver en quelques minutes le programme qui vous
                            correspond')}}</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- breadcrumb area end here  -->

    <!-- teem area start here  -->
    <section class="our-team-area-wrapper">
        <div class="our-team-inner">
            <div class="container custom-container-01">
                <div class="row column-gap-50">
                    <div class="col-0 col-md-4 pe-xl-5 ">
                        <h5 class="mb-3">{{("Filtres")}}</h5>
                        <div class="">
                            <form class="search-form p-4 p-lg-5  card border-0 shadow-sm" style="border-radius: 30px;">
                                <div>
                                    <h6 class="">{{t("Langue")}}</h6>
                                    <div class="mt-3">
                                        <div class="d-flex justify-content-between">
                                            <div class="form-check">
                                                <input class="form-check-input" name="lang:en" {{("en" in filters_langs? "checked" :"")}}
                                                    type="checkbox" value="en" id="defaultCheck1">
                                                <label class="form-check-label" for="defaultCheck1">
                                                    Anglais
                                                </label>
                                            </div>
                                            <div class="">
                                                <!--p class="px-2 text-white rounded-pill bg-primary small">6</p-->
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between mt-1">
                                            <div class="form-check mt-1">
                                                <input class="form-check-input" name="lang:fr" type="checkbox"
                                                    value="fr" id="defaultCheck2" {{
                                                    ("fr" in filters_langs? "checked" :"")}}>
                                                <label class="form-check-label" for="defaultCheck2">
                                                    Français
                                                </label>
                                            </div>
                                            <div class="">
                                                <!--p class="px-2 text-white rounded-pill bg-primary small">6</p-->
                                            </div>
                                        </div>

                                    </div>
                                </div>
                                <div class="mt-4">
                                    <h6>{{t("Villes")}}</h6>
                                    <div class="mt-3 d-flex flex-column">
                                        {% for k, r in towns|slice(0, 4) %}
                                        <div class="d-flex justify-content-between mt-1">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" name="town:{{r.town_id}}"
                                                    {{ (r.town_id in
                                                    filters_towns? "checked" :"")}} type="checkbox" id="inlineCheckbox1"
                                                    value="{{r.town_id}}">
                                                <label class="form-check-label"
                                                    for="inlineCheckbox1">{{r.town_name}}</label>
                                            </div>
                                            {% if r.total is not empty %}
                                            <div class="">
                                                <p class="px-2 text-white rounded-pill bg-primary small">{{r.total}}</p>
                                            </div>
                                            {% endif %}
                                        </div>
                                        {% endfor %}
                                        <div id="collapseOne" class="collapse" data-bs-parent="#accordionOne">
                                            {% for k, r in towns|slice(4) %}
                                            <div class="d-flex justify-content-between mt-1">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" name="town:{{r.town_id}}"
                                                        {{ (r.town_id in
                                                        filters_towns? "checked" :"")}} type="checkbox"
                                                        id="inlineCheckbox1" value="{{r.town_id}}">
                                                    <label class="form-check-label"
                                                        for="inlineCheckbox1">{{r.town_name}}</label>
                                                </div>
                                                {% if r.total is not empty %}
                                                <div class="">
                                                    <p class="px-2 text-white rounded-pill bg-primary small">{{r.total}}
                                                    </p>
                                                </div>
                                                {% endif %}
                                            </div>
                                            {% endfor %}
                                        </div>
                                        {% if towns|slice(4)|length %}
                                        <div>
                                            <a class="collapsed" role="button" data-bs-toggle="collapse"
                                                data-bs-target="#collapseOne" aria-expanded="false"
                                                aria-controls="collapseOne">
                                                <p class=" mt-2 "><small>{{t("Voir plus")}}</small></p>
                                            </a>
                                        </div>
                                        {% endif %}

                                    </div>
                                </div>
                                <div class="mt-4">
                                    <h6>{{t("Secteurs")}}</h6>
                                    <div class="mt-3 d-flex flex-column">
                                        {% for k, r in domaines|slice(0, 4) %}
                                        <div class="d-flex justify-content-between mt-1">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" name="domaine:{{r.sector_id}}"
                                                    {{ (r.sector_id in
                                                    filter_domaines ? "checked" :"")}} type="checkbox"
                                                    id="inlineCheckbox1" value="{{r.sector_id}}">
                                                <label class="form-check-label"
                                                    for="inlineCheckbox1">{{r.sector_name|raw}}</label>
                                            </div>
                                            {% if r.total is not empty %}
                                            <div class="">
                                                <p class="px-2 text-white rounded-pill bg-primary small">{{r.total}}</p>
                                            </div>
                                            {% endif %}
                                        </div>
                                        {% endfor %}
                                        <div id="collapsetwo" class="collapse" data-bs-parent="#accordionOne">
                                            {% for k, r in domaines|slice(4) %}
                                            <div class="d-flex justify-content-between mt-1">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" name="domaine:{{r.sector_id}}"
                                                        {{  (r.sector_id in
                                                        filter_domaines ? "checked" :"")}} type="checkbox"
                                                        id="inlineCheckbox1" value="{{r.sector_id}}">
                                                    <label class="form-check-label"
                                                        for="inlineCheckbox1">{{r.sector_name}}</label>
                                                </div>
                                                {% if r.total is not empty %}
                                                <div class="">
                                                    <p class="px-2 text-white rounded-pill bg-primary small">{{r.total}}
                                                    </p>
                                                </div>
                                                {% endif %}
                                            </div>
                                            {% endfor %}
                                        </div>
                                        {% if domaines|slice(4)|length %}
                                        <div>
                                            <a class="collapsed" role="button" data-bs-toggle="collapse"
                                                data-bs-target="#collapsetwo" aria-expanded="false"
                                                aria-controls="collapsetwo">
                                                <p class=" mt-2 "><small>{{t("Voir plus")}}</small></p>
                                            </a>
                                        </div>
                                        {% endif %}


                                    </div>
                                </div>
                                <div class="mt-4">
                                    <h6>{{t("Diplomes")}}</h6>
                                    <div class="mt-3 d-flex flex-column">
                                        {% for k, r in diplomas|slice(0, 4) %}
                                        <div class="d-flex justify-content-between mt-1">
                                            <div class="form-check form-check-inline">
                                                <input class="form-check-input" name="diploma:{{r.diploma_id}}"
                                                    {{ (r.diploma_id in
                                                    filter_diplomas ? "checked" :"")}} type="checkbox"
                                                    id="inlineCheckbox1" value="{{r.diploma_id}}">
                                                <label class="form-check-label"
                                                    for="inlineCheckbox1">{{r.diploma_name}}</label>
                                            </div>
                                            {% if r.total is not empty %}
                                            <div class="">
                                                <p class="px-2 text-white rounded-pill bg-primary small">{{r.total}}</p>
                                            </div>
                                            {% endif %}
                                        </div>
                                        {% endfor %}
                                        <div id="collapseThree" class="collapse" data-bs-parent="#accordionOne">
                                            {% for k, r in diplomas|slice(4) %}
                                            <div class="d-flex justify-content-between mt-1">
                                                <div class="form-check form-check-inline">
                                                    <input class="form-check-input" name="diploma:{{r.diploma_id}}"
                                                        {{ (r.diploma_id in
                                                        filter_diplomas ? "checked" :"")}} type="checkbox"
                                                        id="inlineCheckbox1" value="{{r.diploma_id}}">
                                                    <label class="form-check-label"
                                                        for="inlineCheckbox1">{{r.diploma_name}}</label>
                                                </div>
                                                {% if r.total is not empty %}
                                                <div class="">
                                                    <p class="px-2 text-white rounded-pill bg-primary small">{{r.total}}
                                                    </p>
                                                </div>
                                                {% endif %}
                                            </div>
                                            {% endfor %}
                                        </div>
                                        {% if diplomas|slice(4)|length %}
                                        <div>
                                            <a class="collapsed" role="button" data-bs-toggle="collapse"
                                                data-bs-target="#collapseThree" aria-expanded="false"
                                                aria-controls="collapseThree">
                                                <p class=" mt-2 "><small>{{t("Voir plus")}}</small></p>
                                            </a>
                                        </div>
                                        {% endif %}


                                    </div>
                                </div>
                                <div>
                                    <button type="submit"
                                        class="btn btn-common w-100 p-3 round-lg btn-primary">{{t("Filtrer")}}</button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="col-12 col-md-8 p-3 mt-lg-4  ">
                        {% for k, p in data %}
                        <div>

                            <div class="mt-3 shadow-sm offer-item p-4 p-lg-4 bg-white col-12 {{k==0? 'mt-0':''}}"
                                style="border-radius: 30px;">
                                <div class="d-flex justify-content-between">
                                    <h4>{{p.program_name}} </h4>
                                    <p class=""> <span class="mb-0">
                                        <i class="fas fa-location-pin"></i>
                                        <span class="ms-2">{{p.town_name}}</span>
                                    </span> | <strong>{{p.program_code}}</strong></p>
                                </div>
                                <div class=" d-sm-flex justify-content-between ">
                                    <div class="d-flex align-items-center">
                                       
                                    </div>
                                    <div class="mt-sm-0 mt-4 d-flex justify-content-end align-items-center">
                                        <p class=" text-success m-0 me-2 text-center " style="min-width: 70px">
                                            <!--span>{{t("Active")}}</span>
                                            <span>
                                                <span style="width:10px; height:10px;"
                                                    class="d-inline-block   bg-success border border-light rounded-circle">
                                                    <span class="visually-hidden">New alerts</span>
                                                </span>
                                            </span-->
                                        </p>
                                        <a href="/catalogue/{{p.program_id}}"
                                            class="w-100  btn-action btn btn-primary text-primary px-4"
                                            style="background:rgba(118, 74, 241, 0.18); border-radius: 10px;">{{t("Détails")}}</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-12">
                        <div class="pagination">
                            <ul class="pagination-list">
                                {% for k,v in buttons %}
                                <li>
                                    <a href="{{v.url}}&{{query}}"
                                        class="page-number  {{currentPage==v.id ? 'current':''}} {{k=='prev' ? 'able left-arrow':(k=='next' ? 'able right-arrow':'')}}">
                                        {{v.name|upper}}
                                    </a>
                                </li>
                                {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- teem area end here  -->
</div>
<!-- about page end here  -->
<script>
    document.querySelector("body").onload = function () {
        $('form.search-form ').on("submit", (e) => {
            e.preventDefault();
            const { form: values } = getFormValues("form.search-form");
            const data = {
                domaines:[],
                diplomas:[],
                langs:[],
                towns:[]
            }
            for (let i in values) {
                if (i && values[i]) {
                    const d = i.split(":");
                    const name=d[0] + "s";
                    data[name] = [
                        ...(data[name] ?? []),
                        d[1]
                    ]
                    console.log(d[1])
                }
            }
            const query = []
            for (let i in data) {
                query.push(`${i}=${data[i].join(",")}`)
            }
            
            window.location.href = "/catalogue?" + query.join("&")
        })
    }
</script>
{% endblock %}