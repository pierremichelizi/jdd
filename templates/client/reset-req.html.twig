{% extends 'client/base.html.twig' %}

{% block title %}AdmissionFacile | {{"Obtener votre admission sans perdre du temps"|trans}}{% endblock %}

{% block body %}

<div class="mt-4">

    <div class="row">
        <div class=" col-12 col-sm-9 col-md-7 col-lg-5 mx-auto px-4">
            <div class=" card  p-4 p-xl-5" style="border-radius: 20px;">
                <h5>{{t("Réinitialiser ")}}</h5>
                <p>{{t("Réinitialisation de mot de passe ")}}</p>
                <div>
                    <div class="form-element">
                        <div class="row">
                            <div class="contact-form">
                                {% for error in errors.form|slice(0, 1) %}
                                <div class="form-error ">
                                    <div class="alert alert-danger">
                                        {{error}}
                                    </div>
                                </div>
                                 {% endfor %}
                                
                                <form class="form" accept="/auth/reset/request" method="POST">
                                    <div class="form-element">
                                        <div class="row ">
                                            <div class="col-12  mt-4">
                                                <i class="fa-solid fa-envelope-open"></i>
                                                <input type="email" name="email" placeholder="{{t("Email")}}" required="">
                                            </div>
                                            
                                            {% for error in errors.email|slice(0, 1) %}
                                            <small>{{error}}</small>
                                            {% endfor %}
                                            <input type="hidden" name="csrf_token" value="{{csrf_token}}">
                                            <div class="col-12 mt-5">
                                                <button class="btn-common btn-active w-100">{{t("Récupérer")}}</button>
                                            </div>
                                        </div>
                                    </div>

                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div>
                    <p class="text-center mt-4">

                        <a href="/Connexion">
                            {{t('Vous ne souhaitez plus réinitialiser ? ')}} <br /></br.>
                            {{"Connectez-Vous"}}</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="instructors-wrapper single-page-section-bottom-space">


</div>

{% endblock %}