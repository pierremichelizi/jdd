                            <li class="mt-2"><b>{{t("BIC")}}</b>: {{t("PRNSFRP1")}}</li>
                        </div>
                    </div>
                    <div class="mt-4 text-right">
                        <a href="/payments/{{invoiceID}}/confirm" class=" btn btn-common text-white bg-primary">{{t("Confirmer mon paiement")}}</a>
                    </div>
                </div>
            </div>
        </div>
